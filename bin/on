#!/bin/sh

if [ $# -eq 0 ]; then
        echo
        echo "  Usage examples: if you have a profile named gtk:"
        echo "    on gtk install icecat"
        echo "    on gtk upgrade"
        echo "    on gtk package --rollback"
        echo "    on gtk package -m MY-GTK-MANIFEST.scm"
        echo
        exit
fi

profile="$1"
shift
command="$1"
shift
guix "$command" -p "$EXTRA_PROFILES/$profile/$profile" "$@"
